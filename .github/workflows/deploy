name: Deploy Chat
on:
  push:
    branches: [main]

jobs:
  build:
    runs-on: ubuntu-latest
    permissions:
      contents: write
    steps:
      - uses: actions/checkout@v3
      
      - name: Replace token placeholder
        run: |
          # Заменяем плейсхолдер на реальный токен из Secrets
          sed -i "s/{{ secrets\.CHAT_TOKEN }}/${{ secrets.CHAT_TOKEN }}/g" index.html
      
      - name: Deploy to GitHub Pages
        uses: peaceiris/actions-gh-pages@v3
        with:
          chat_token: ${{ secrets.CHAT_TOKEN }}
          publish_dir: ./
